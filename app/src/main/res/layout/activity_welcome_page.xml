<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/beigebg"
    tools:context="com.oak.stone.blackjackcardcounter.WelcomePage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Blackjack Card Counter"
        android:id="@+id/textView3"
        android:textSize="45dp"
        android:gravity="center"
        android:textColor="#3D1F00"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/casinochip"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="spin_chip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="About"
        android:id="@+id/textView4"
        android:textSize="20dp"
        android:clickable="true"
        android:onClick="aboutPage"
        android:textColor="#3D1F00"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:text="Basic Strategy"
        android:id="@+id/button8"
        android:textSize="24dp"
        android:clickable="true"
        android:onClick="how_to_page"
        android:textColor="#3D1F00"
        android:background="#D1C2B2"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp" />

    <Button
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:text="Help"
        android:id="@+id/button9"
        android:textSize="24dp"
        android:clickable="true"
        android:onClick="help_page"
        android:textColor="#3D1F00"
        android:background="#D1C2B2"
        android:layout_below="@+id/button8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />

    <Button
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:text="Start Counting"
        android:id="@+id/button"
        android:clickable="true"
        android:onClick="startCounting"
        android:textSize="24dp"
        android:textColor="#3D1F00"
        android:background="#D1C2B2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
